<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/article.css" rel="stylesheet" />
    <link href="~/Content/home.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body ng-app="SuperShoesApp">
    <header class="header">
        <figure class="header-logo">
            <img src="~/Image/logo.png" />
        </figure>
        <div class="header-menu">
            <ul class="menu">
                <li>
                    <a ng-href="#">Home</a>
                </li>
                <li>
                    <a ng-href="#">Blog</a>
                </li>
                <li>
                    <a ng-href="#">About</a>
                </li>
            </ul>
        </div>
    </header>
    <div class="bar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink(" ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                <ul>
                    <li>
                        <a ng-href="/articlesbyid">Get Shoes By Id</a>
                    </li>
                    <li>
                        <a ng-href="#">Get Shoes By Store</a>
                    </li>
                    <li>
                        <a ng-href="#">Add Shoes</a>
                    </li>
                    <li>
                        <a ng-href="#">Update Shoes</a>
                    </li>
                    <li>
                        <a ng-href="#">Delete Shoes</a>
                    </li>
                </ul>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                </ul>
            </div>
        </div>
    </div>
    <section class="image-principal">
        <div>
            <img src="~/Image/shoes.jpg" width="100%"/>
        </div>
    </section>

    @RenderBody()
    
    <div ng-view>

    </div>

   

    
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/angular-route.min.js"></script>

    <script src="~/app/app.js"></script>
    <script src="~/app/app.route.js"></script>
    
    <script src="~/app/article/article.controller.js"></script>
    <script src="~/app/article/article.service.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>